    tfoot
      - billing_price = BillingPrice.default
      - if current_user.blank?
        tr
          td
          td
            .price
              |#{billing_price.company_price} ₽/мес.
              span + 990 ₽/мес. за сотрудника
            .action__block
              .btn.is__blue.js_openFormRegistration.selectType data-type="corp" ОПЛАТИТЬ
          td
            .price #{number_with_delimiter(billing_price.user_price.to_i, delimiter: ' ')} ₽/мес.
            .action__block
              .btn.is__blue.js_openFormRegistration.selectType data-type="pers" ОПЛАТИТЬ
          td
            .price Бесплатно
            .action__block
              a.btn.btn-flat.is__border href="/sign_up" ВЫБРАТЬ
      - else
        tr
          td
          td
            .price
              |#{number_with_delimiter(billing_price.company_price.to_i, delimiter: ' ')} ₽/мес.
              span + #{number_with_delimiter(billing_price.company_user_price.to_i, delimiter: ' ')} ₽/мес. за сотрудника
            .action__block
              - if (sub.company? rescue false) || (sub.user? rescue false)
                - if (sub.company? rescue false)
                  a.btn.is__blue href="/payment" продлить
                - else
                  a.btn.is__blue href="/payment?type=company" оплатить
              - elsif (sub.blank?)
                a.btn.is__blue href="/payment?type=company" ОПЛАТИТЬ
              - else
                .btn.is__blue.disable ОПЛАТИТЬ
          td
            .price #{number_with_delimiter(billing_price.user_price.to_i, delimiter: ' ')} ₽/мес.
            .action__block
              - if (sub.user? rescue false)
                a.btn.is__blue href="/payment" продлить
              - elsif (sub.blank? && !current_user.director?)
                a.btn.is__blue href="/payment?type=user" ОПЛАТИТЬ
              - else
                .btn.is__blue.disable ОПЛАТИТЬ
          td
            .price Бесплатно
            .action__block
              .btn.is__blue.disable ВЫБРАТЬ


