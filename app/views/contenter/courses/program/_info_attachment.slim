.info_attachment
  .icon__block.ui-state-default.js_openInfoParent
    i.icon class=attachment.class_type
  .adaptive__title
    .fixed-h
      - title = attachment.title
      .left-col.title.js_openInfoParent = title.present? ? title : "Нет заголовка"
    .right-col
      - duration = attachment.duration.to_i
      = rus_case(duration, "минута", "минуты", "минут") if duration > 0
      .remove.js_removeAttachmentToSection data-id=attachment.id
  - description = attachment.description
  .description = description.present? ? description : "Нет описания"
  = render "contenter/courses/help_error"