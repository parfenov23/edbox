.header__bottom
    .next_arr
      i.icon
    .prev_arr
      i.icon
    .title
        - unless header_bottom[:arrow].nil?
            a.arrow.icon href="#{header_bottom[:arrow][:url]}"
        - unless header_bottom[:title].nil?
            .title-text
                = header_bottom[:title]
    
        - case header_bottom[:block]
        - when "profile"
            ul.tabs
                li.tabs__item class="#{header_bottom[:profile_class]}"
                    a.tabs__item-link href="/profile" персональные данные
                / li.tabs__item
                /   a.tabs__item-link href="#" уведомления
                li.tabs__item class="#{header_bottom[:tariff_class]}"
                    a.tabs__item-link href="/tariff" тариф
                / li.tabs__item
                /   a.tabs__item-link href="#" аналитика
                / li.tabs__item
                /   a.tabs__item-link href="#" достижения
                .line

        - when "cabinet"
            ul.tabs
                - if current_user.director
                    li.tabs__item class="#{header_bottom[:groups_class]}"
                        a.tabs__item-link href="/group?id=#{(current_user.company.groups.first.id rescue "new")}"
                            |группы
                    li.tabs__item class="#{header_bottom[:members_class]}"
                        a.tabs__item-link href="/members" участники
                li.tabs__item class="#{header_bottom[:schedule_class]}"
                    a.tabs__item-link href="/schedule" расписание
                li.tabs__item class="#{header_bottom[:favorite_class]}"
