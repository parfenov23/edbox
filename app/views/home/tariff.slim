#header__holder
  = render "home/header" , {header_top_arr:['notifications']}
  = render "home/header_bottom", {header_bottom: {block: "profile", title: 'Мой профиль', tariff_class: "active"} }
.content#profile
  .profile__block.profile__block-tariff.profile__tariff-free
    .title Бесплатная корпоративная подписка
    .time
      span> Подключенно
      span 9 мая 2015 года
    .clearfix
    .quantity
      span> 20
      span пользователей

  .profile__block.profile__block-tariff.profile__tariff-paid
    .title Корпоративная подписка
    .time
      span> Подключенно
      span 9 мая 2015 года
    .clearfix
    / .quantity
    /   span> 20
    /   span пользователей
    ul.info
      li.info__item
        .info__item-top Количество пользователей
        .info__item-bottom 20
      li.info__item
        .info__item-top
          p Стоимость подписки
          p за 1 пользователя
        .info__item-bottom
          span>1 000
          span ₽
      li.info__item
        .info__item-top
          p Сумма для оплаты за период
          p 15 мая - 15 июня
        .info__item-bottom
          span> 20 000
          span ₽

