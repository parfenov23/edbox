- if @account_type.id.nil?
    - action_url = "/superuser/account_types"
    - method = "post"
- else
    - action_url = "/superuser/account_types/#{@account_type.id}"
    - method = "put"
form.form-horizontal action="#{action_url}" method="post"
    .form-group
        label
            | Системное имя:
        input.form-control name="account_type[name]" type="text" value="#{@account_type.name}"
    .form-group
        label
            | Название:
        input.form-control name="account_type[title]" type="text" value="#{@account_type.title}"
    .form-group
        label
            | Название:
        input.form-control name="account_type[info]" type="text" value="#{@account_type.info}"
    input type="hidden" name="_method" value="#{method}"
    button.btn.btn-primary type="submit" Сохранить