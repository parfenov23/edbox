- action_url = @tag.id.nil? ? "/superuser/tags" : "/superuser/tags/#{@tag.id}"
- method = @tag.id.nil? ? "post" : "put"
form.form-horizontal action="#{action_url}" method="post"
    .form-group
        label
            | Название:
        input.form-control name="tag[title]" type="text" value=@tag.title
    .form-group
        label
            | Позиция:
        input.form-control name="tag[position]" type="text" value=@tag.position
    .form-group
        label
            | Активный?:
        = check_box("tag", "active", {checked: @tag.active})
    input type="hidden" name="_method" value=method
    input type="hidden" name="tag[tagtable_type]" value=@tag.tagtable_type
    input type="hidden" name="tag[tagtable_id]" value=@tag.tagtable_id
    button.btn.btn-primary type="submit" Сохранить
- if @tag.id.present?
  a.btn.btn-success href="/superuser/tags/#{@tag.id}/subtag"
